---
import { Icon } from "astro-icon/components";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://sidahmedslikh.vercel.app/",
    description: "website",
    icon: "mdi:microsoft-internet-explorer",
  },
  {
    url: "https://github.com/Zino0031",
    description: "GitHub",
    icon: "fa-brands:github-alt",
  },
  {
    url: "https://www.linkedin.com/in/sidahmed-zinedine/",
    description: "linkedin",
    icon: "fa-brands:linkedin",
  },
];
---

<footer class="relative flex h-64 items-start justify-center">

  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex size-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="size-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
