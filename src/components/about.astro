---
import { Icon } from "astro-icon/components";
import ContentSection from "~/components/content-section.astro";
import type { PassionItem } from "~/types";

const passions: Array<PassionItem> = [
  {
    title: "Blockchain Technology",
    description:
      "Blockchain's potential to revolutionize industries through decentralized innovation is captivating, fueling my passion for exploring its limitless possibilities.",
    icon: "mdi:bitcoin",
  },
  {
    title: "Design",
    description:
      "Design is my passion; it's where creativity meets functionality. Crafting visually captivating experiences brings me joy and fulfillment.",
    icon: "mdi:draw-pen",
  },
  {
    title: "Cybersecurity",
    description:
      "Cybersecurity's vital role in protecting digital realms ignites my passion for securing online landscapes.",
    icon: "mdi:security",
  },
  {
    title: "Artificial Intelligence",
    description:
      "Artificial Intelligence's transformative potential inspires my passion for exploring its limitless applications and advancements.",
    icon: "mdi:robot",
  },
  {
    title: "Game Development",
    description:
      "Game development fuels my passion, merging creativity with technology to craft immersive experiences that captivate players worldwide.",
    icon: "mdi:gamepad",
  },
  {
    title: "Art & Music",
    description:
      "Art and music are my soul's language, expressing emotions and stories through vibrant visuals and melodious tunes.",
    icon: "mdi:guitar-acoustic",
  },
];
---

<ContentSection title="About me" id="about">
  <Fragment slot="lead">
    Experienced with 6+ years with 
        <span class="text-primary"> web development & design </span>specializing in Front-End Development,  
        <span class="text-primary">skilled</span>
        in creative problem-solving and <span class="text-primary"> design </span> aesthetics.
      </Fragment>
  <ul class="grid max-w-6xl grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
    {
      passions.map(({ title, description, icon }) => (
        <li class="flex flex-col items-center gap-4 border border-default bg-offset p-6">
          <div class="size-16 rounded-full border-2 border-current p-3">
            <Icon name={icon} class="size-full" />
          </div>
          <p class="text-center font-extrabold text-xl">{title}</p>
          <p class="text-center text-offset text-sm">{description}</p>
        </li>
      ))
    }
  </ul>
</ContentSection>
